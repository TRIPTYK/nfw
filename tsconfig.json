{
  "compilerOptions": {
    "lib": ["ES2022"],
    "baseUrl": ".",
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "tests/*": ["tests/*"],
      "app/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
