{
  "compilerOptions": {
    "lib": ["ES2022"],
    "strict": true,
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "ES2022",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
