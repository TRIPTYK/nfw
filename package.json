{
  "name": "3rd-party-ts-boilerplate",
  "version": "0.0.1",
  "description": "This repository contains 3rd party REST API boilerplate Express.js, Typescript, TypeORM based.",
  "main": "./dist/app.bootstrap.js",
  "watch": {
    "src": {
      "patterns": ["src"],
      "extensions": "env",
      "quiet": true,
      "legacyWatch": true,
      "delay": 2500,
      "runOnChangeOnly": true
    }
  },
  "scripts": {
    "test": "./node_modules/.bin/mocha --reporter spec",
    "distify": "mkdir -p ./dist/logs ./dist/uploads/documents/xs ./dist/uploads/documents/md ./dist/uploads/documents/xl && cp ./src/development.env ./dist/development.env && cp ./src/staging.env ./dist/staging.env && cp ./src/production.env ./dist/production.env",
    "environify": "yes | cp -rf ./src/development.env ./dist/development.env && yes | cp -rf ./src/staging.env ./dist/staging.env && yes | cp -rf ./src/production.env ./dist/production.env",
    "watch": "npm-watch 'environify'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TRIPTYK/3rd-party-ts-boilerplate.git"
  },
  "keywords": [
    "node",
    "express.js",
    "boilerplate",
    "typescript",
    "typeorm"
  ],
  "author": "Steve Lebleu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TRIPTYK/3rd-party-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/TRIPTYK/3rd-party-ts-boilerplate#readme",
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.3",
    "body-parser": "^1.18.3",
    "boom": "^7.3.0",
    "chai": "^4.2.0",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "es6-promisify": "^6.0.1",
    "express": "^4.16.4",
    "express-validation": "^1.0.2",
    "express-validator": "^5.3.1",
    "helmet": "^3.15.0",
    "http-status": "^1.3.1",
    "jimp": "^0.6.0",
    "joi": "^14.3.1",
    "jwt-simple": "^0.5.5",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "moment-timezone": "^0.5.23",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "mysql": "^2.16.0",
    "node-notifier": "^5.3.0",
    "npm-watch": "^0.6.0",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.0",
    "typeorm": "^0.2.12",
    "uuid": "^3.3.2",
    "winston": "^3.1.0"
  }
}
