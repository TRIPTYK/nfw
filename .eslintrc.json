{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi":"off",
        "no-return-assign": "off",
        "@typescript-eslint/member-delimiter-style": ["error", {
            "multiline": {
              "delimiter": "comma",    // 'none' or 'semi' or 'comma'
              "requireLast": true
            },
            "singleline": {
              "delimiter": "semi",    // 'semi' or 'comma'
              "requireLast": false
            }
        }]
    }
}
